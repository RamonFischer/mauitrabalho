<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto_Curso.Views.TransactionEdit"
             Title="TransactionEdit">
    <VerticalStackLayout>
        <Border
            Margin="15"
            Padding="15"
            BackgroundColor="Black"
            Stroke="Transparent"
            StrokeShape="RoundRectangle 30">
            <Grid ColumnDefinitions="*, 30" RowDefinitions="Auto">
                <Label 
            Grid.Row="0"
            Grid.Column="0"    
            Text="De um update na sua contabilidade"
            HorizontalOptions="Center" 
            TextColor="White"/>
            </Grid>
        </Border>

        <Grid Margin="30,0" ColumnDefinitions="*,*">
            <RadioButton Content="Receita" IsChecked="True" />
            <RadioButton Grid.Column="1" Content="Despesa" HorizontalOptions="End" />
        </Grid>
        <Entry Margin="15,0" Placeholder="Nome" />

        <DatePicker Margin="15,0" />

        <Entry Margin="15,0" Placeholder="Valor" />

        <Button Margin="15,0" Text="Salvar" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>